<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">


    <Button
        android:id="@+id/bttnVolverListadoPrestamo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:text="Listado"
        app:cornerRadius="5dp"
        app:icon="@drawable/chevron_152421"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="680dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints">



        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LIBRO"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/menuLibroPrestamo"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seleccione Libro"
            android:layout_marginBottom="30dp">


            <AutoCompleteTextView
                android:id="@+id/spnLibro"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:inputType="none"
                app:dropDownBackgroundTint="@color/white"/>

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/bttnRegistrarPrestamo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>